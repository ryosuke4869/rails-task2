<div class="container devise">
  <div class="device-frame">
    <p>新しいアカウントを作成</p>
    <div class="device_inner ">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field required">
          <div class="required-b"></div>
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", placeholder: "ユーザー名" , class:"area"%>
        </div>

        <div class="field required">
          <div class="required-b"></div>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class:"area" %>
        </div>

        <div class="field required">
          <div class="required-b"></div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)" , class:"area"%>
        </div>

        <div class="field required">
          <div class="required-b"></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再確認", class:"area" %>
        </div>

        <div class="actions field">
          <%= f.submit "新規登録", class: "btn-orange btn-cubic btn-shadow" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


