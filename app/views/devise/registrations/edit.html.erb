<div class="container devise">
  <div class="device-frame">
    <p>アカウント編集</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="form-group">
            <%= f.label :user_name ,"ユーザー名" %>
            <%= f.text_field :user_name , class: "form-control", placeholder: "ユーザー名を入力" %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label :user_image ,"アイコン画像" %>
            <%= image_tag @user.user_image if @user.user_image.attached?%>
            <%= f.file_field :user_image, placeholder: "アイコン画像をアップロード" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
            <div class="form-group">
              <%= f.label :introduce ,"自己紹介"%>
              <%= f.text_area :introduce, class: "form-control" , placeholder: "自己紹介を入力" %>
            </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label :変更後パスワード %> <i>(変更する場合のみ入力)</i>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "新規パスワードを入力", class: "form-control"  %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label :パスワード確認用 %><i>(変更する場合のみ入力)</i>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"新規パスワード確認用", class: "form-control" %>
          </div>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.label :現在のパスワード %>
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"現在のパスワードを入力", class: "form-control"%>
          </div>
        </div>

        <div class="actions field">
          <%= f.submit "更新する", class: "btn-orange btn-cubic btn-shadow"%>
        </div>
      <% end %>
      <%= link_to "戻る", :back %>
    </div>
  </div>
</div>
